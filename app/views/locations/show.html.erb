<%= render "navbar" %>
<br>
<br>

<div class="banner-show-page" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @location.image %>)">
  <h1><%= @location.name %> - <%= @location.location %></h1>
  <br>
  <p><%= link_to "Home", root_path %></p>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="info-show-page">
        <h2 style="text-align: center;"><%= @location.trip %> to <%= @location.location %></h2>
        <br>
        <p><%= @location.description %></p>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= image_tag @location.imageone, class: 'image-one'%>
          <%= image_tag @location.imagethree, class: 'image-one'%>
        </div>
        <div class="col-lg-6">
          <%= image_tag @location.imagetwo, class: 'image-one'%>
          <%= image_tag @location.imagefour, class: 'image-one'%>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div id="map2"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
           </div>
    </div>
  </div>
</div>
