<div class="banner-show-page" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @location.image %>)">
  <h1><%= @location.name %></h1>
  <p><%= @location.location %></p>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h2><%= @location.trip %></h2>
      <p><%= @location.description %></p>
    </div>
    <div class="col-lg-6">
      <div id="map2"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
           </div>
    </div>
  </div>
</div>
